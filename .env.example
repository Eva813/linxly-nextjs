# Application Configuration
# Copy this file to .env.local and configure your values

# Database
DATABASE_URL="your-database-url"

# Authentication
NEXTAUTH_SECRET="your-nextauth-secret"
NEXTAUTH_URL="http://localhost:3000"

# Timezone Configuration (Optional)
# If not set, the application will automatically use the user's local timezone
# Set this to override automatic detection and force a specific timezone
# Examples: America/New_York, Europe/London, UTC, Asia/Tokyo
# NEXT_PUBLIC_TIMEZONE="Asia/Taipei"
# TIMEZONE="Asia/Taipei"

# Cache Duration Configuration (Optional)
# Invite link expiration in days (Default: 30)
INVITE_LINK_EXPIRES_DAYS=30

# JWT token expiration in days (Default: 7)
JWT_EXPIRES_DAYS=7

# Folder cache duration in minutes (Default: 5)
FOLDER_CACHE_MINUTES=5